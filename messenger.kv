<Register>:
    GridLayout:
        cols: 2
        size: 300, 100

        Label:
            id: "Login"
            text: "Login"
            size_hint_x: None
            width: 100
            size_hint_y: None
            height: 30

        TextInput:
            write_tab: False
            multiline: False
            size_hint_x: None
            width: 150
            size_hint_y: None
            height: 30

        Label:
            id: "Password"
            text: "Password"
            size_hint_x: None
            width: 100
            size_hint_y: None
            height: 30

        TextInput:
            write_tab: False
            multiline: False
            password: True
            size_hint_x: None
            width: 150
            size_hint_y: None
            height: 30
